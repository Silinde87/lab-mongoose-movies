<h1>Celebrities List</h1>
<ul class="list-group w-50">
  {{#each celebrities}}
    <li class="list-group-item">
      <h2 class="fs-3 text-secondary">{{name}}</h2>
      <div class="container">
        <div class="row">
          <div class="col-auto">
            <form action="/celebrities/{{_id}}" method="get">
              <button type="submit" class="btn btn-outline-secondary px-3 py-1">Details</button>
            </form>
          </div>
          <div class="col-auto">
            <form action="/celebrities/{{_id}}/delete" method="post">
              <button type="submit" class="btn btn-outline-danger px-3 py-1">Delete</button>
            </form>
          </div>
          <div class="col-auto">
            <form action="" method="post"> <!-- todo route -->
              <button type="submit" class="btn btn-outline-primary px-3 py-1">Update</button>
            </form>
          </div>
        </div>
      </div>
    </li>
  {{/each}}
</ul>

<a href="/celebrities/new">
  <button class="btn btn-outline-success px-3 py-1 m-3">Add</button>
</a>
<a href="/">
  <button class="btn btn-outline-secondary px-3 py-1 m-3">Back</button>
</a>